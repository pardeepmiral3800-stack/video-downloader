{
  "name": "video-downloader",
  "version": "1.0.0",
  "description": "Instagram and YouTube video downloader",
  "type": "module",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "cd server && node --watch server.js",
    "build": "cd client && npm run build",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "health": "curl -f http://localhost:5000/ || exit 1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "tailwindcss": "^4.1.13"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
